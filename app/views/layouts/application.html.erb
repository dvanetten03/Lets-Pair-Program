<!DOCTYPE html>
<html>
<head>
  <title>LetsPairProgram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "LPP", root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      </ul>
      <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'My Profile', "#" %></li>
            <li><%=  link_to 'Sign out', destroy_user_session_path, method: :delete  %></li>
          <% else %>
            <li><%=  link_to 'Log in', new_user_session_path  %></li>
            <li><%=  link_to 'Sign Up', new_user_registration_path  %></li>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% if notice.present? %>
<p class="alert alert-info"><%= notice %></p>
<% end %>

<% if alert.present? %>
<p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
<br class="clr"/>
<br class="clr"/>
  <div id="footer">
    <div class="container-fluid">
      <div class="col-xs-12 col-sm-3">
        <b><%= link_to 'About Us', about_path %></b>
        <br/>
        <b><%= link_to 'Contacts', contacts_path %></b>
        <br/>
        <b><%= link_to 'Press', press_path %></b>
        <br/>
        <b><%= link_to 'Terms & Conditions', terms_path %></b>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Subscribe</b>
        <br/>
        <br/>
        <%= image_tag 'face.png', class: 'social-button' %>
        <%= image_tag 'gram.png', class: 'social-button' %>
        <%= image_tag 'twit.png', class: 'social-button' %>
        <%= image_tag 'Pin.png', class: 'social-button' %>
      </div>
    </div>
  </div>


</body>
</html>
